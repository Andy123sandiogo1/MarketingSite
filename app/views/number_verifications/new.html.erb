<div class="container-fluid min-100 d-flex">
	<div class="row flex-grow-1 bg-light investment_wizard_steps">
    <div class="col p-4">

      <div class="row h-100 justify-content-center align-items-center">
        <div class="col-4">
          <%= form_with scope: :phone_number, url: number_verifications_path, local: true do |f| %>
            <%= render "layouts/notifications" %>
          <div class="form-group">
            <label for="formGroupExampleInput">Please verify you phone number <%= link_to "Resend code", new_number_verification_path(number: @number.id) %></label>
            <%#<input type="text" placeholder="Enter your code here..." class="form-control form-control-lg" />%>
            <%= text_field_tag "code",'', class: "form-control form-control-lg", placeholder: "Enter your code here...", autocomplete: "off" %>
            <%= hidden_field_tag "number", @number.id %>
          </div>
          <div class="form-group">
            <%= link_to "Cancel", edit_profile_path, class: "btn btn-default" %>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
