<div class="inv-wiz">
<div class="container-fluid  min-100  d-flex flex-col">
  <div class="row flex-grow-1 bg-light investment_wizard_steps">

    <div class="col-md-9 p-4 flex-grow-1">
      <div class="back"><%= link_to fa_icon("arrow-left", text: "Back"), name_wizard_investment_path %> </div>

      <div class="main_block">
        <header><h4>Investment Timeframe</h4><h6>The Longer the better</h6></header>

        <%= form_for @investment_wizard, as: :investment_wizard, url: validate_step_wizard_investment_path do |form| %>
          <%= hidden_field_tag :current_step, 'timeframe' %>

          <% @investment_wizard.errors.full_messages.each do |error| %>
            <div class="form-group">
              <p style="color:red"><%= error %></p>
            </div>
          <% end %>

          <div >
            <h4 id="timeframe_value">3 Months</h4>
          </div>

          <div class="form-group" style="margin-top: 30px;">
            <%#<input type="range" style="width:100%" class="form-control-range" id="bSlider" min="1" max="10" value="3" onchange="timeframe(value)">%>
          <input type="range" id="bSlider" class="span2" value="" style="width:100%"
                                           data-slider-min="1"
                                           data-slider-max="12"
                                           data-slider-step="1"
                                           data-slider-value="3"
                                           data-slider-orientation="horizontal"
                                           data-slider-selection="after"
                                           data-slider-tooltip="show">
          </div>


          <%= form.hidden_field :open_date, value: Time.now %>
          <%= form.hidden_field :end_date, value: Time.now.months_since(3) %>
          <%= form.hidden_field :timeframe, value: 3 %>

          <!--
          <input type="text" id="bSlider" class="span2" value="" style="width:80%"
                                           data-slider-min="1"
                                           data-slider-max="10"
                                           data-slider-step="1"
                                           data-slider-value="3"
                                           data-slider-orientation="horizontal"
                                           data-slider-selection="after"
                                           data-slider-tooltip="show">
          -->
                  <script>
                  </script>

          <div class="form-group center" style="clear:both">
            <%= form.submit "Continue", class: "btn btn-primary btn-submit" %>
          </div>
        <% end %>
      </div>

    </div>

    <div class="col-md-3 p-4 flex-grow-1 wizard_sidebar" >

      <div class="cancel">
        <button type="button"  data-toggle="modal" data-target="#exampleModal">
          <%= fa_icon "close" %>
        </button>
      </div>

      <h4>Investment Summary</h4>
      <div class="steps_selected">
        <ul>
          <%#<li>%>
            <!--<p><%#= fa_icon "check" %> Investment Plan</p>-->
            <!--<p class="selected"><%#= @investment_wizard.investment.investment_plan.title %> <%#= @investment_wizard.investment.investment_plan.subtitle %></p>-->
          <%#</li>%>
          <li>
            <p><%= fa_icon "check" %> Investment Name</p>
            <p class="selected"><%= @investment_wizard.investment.name %></p>
          </li>
        </ul>
      </div>
    </div>

  </div>
</div>

<%= render "cancel_modal" %>
</div>
