<style>
	.user-access-page .main-container .sign-up-form .selectric-wrapper {
	    margin-bottom: 23px !important;
	    margin-top: 0px !important
			
	}
</style>


<div class="main-page-wrapper user-access-page">
	<div class="main-container">
		<div class="inner-box">

			<%= content_for :title, "Sign Up" %>
			<h3 class="main-title">Create your account</h3>
			<div class="sign-up-form">
			  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<ul style="list-style-type: disc;">
			   <% resource.errors.full_messages.each do |message| %>
			     <li style="color:#dc3545 !important"><%= message %></li>
			   <% end %>
			   </ul>
		
			    <div class="single-input-group small-box">
			      <%= f.email_field :email, placeholder: "Email", class: "fong-fix" %>
			    </div>
					<%= f.fields_for :profile do |profile_attribute| %>
				    <div class="single-input-group small-box">
							 <%= profile_attribute.text_field :name, placeholder: "Full Name", class: "fong-fix" %>
				    </div>
				    <div class="single-input-group small-box">
				      <%= profile_attribute.select :currency, Currency::CURRENCIES, {}, class: "theme-select-dropdown", id: "currency"%>
				    </div>
					<% end %>

			    <div class="single-input-group small-box">
			      <% if @minimum_password_length %>
			      <% end %>
			      <%= f.password_field :password, placeholder: "Password", class: "fong-fix" %>
			    </div>

			    <div cclass="single-input-group small-box">
			      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "fong-fix"%>
			    </div>
					<p class="password-text">&nbsp;Your password should have at least 8 characters</p>
			    <div>
			      <%= f.submit "Create account", class: "theme-button", style: "border-radius:30px !important; cursor: pointer !important;"%>
			    </div>

			    <!-- <%= render "devise/shared/links" %> -->
			  <% end %>
				<div class="condition-text font-fix" style="margin: 8px 0 15px 0 !important;">By clicking 'Create account' you agree to our<a href="#"> Terms of service</a> and <a href="#">Privacy policy</a>.</div>
			</div> <!-- /.inner-box -->
		</div>
	
			<div class="text-center">
				<%= link_to "Already have an account?", sign_in_path, class: 'additional-link-text font-fix' %>
			</div>
	
		</div>
	</div>
