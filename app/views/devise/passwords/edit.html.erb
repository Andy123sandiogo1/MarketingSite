<div class="main-page-wrapper user-access-page">
	<div class="main-container">
		<div class="inner-box">

			<h3 class="main-title">Change your password</h3>
			<div class="sign-up-form">

				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
					<ul style="list-style-type: disc;">
				  	<% resource.errors.full_messages.each do |message| %>
				    	<li style="color:#dc3545 !important"><%= message %></li>
				   	<% end %>
					 	<br>
				  </ul>
				  <%= f.hidden_field :reset_password_token %>

				  <div class="single-input-group small-box">
				    <%= f.password_field :password, placeholder: 'New Password', autocomplete: "off", class: "fong-fix" %>
				  </div>

				  <div class="single-input-group small-box">
				    <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', autocomplete: "off", class: "fong-fix" %>
				  </div>
			    <div>
			      <%= f.submit "Change my password", class: "theme-button", style: "border-radius:30px !important; cursor: pointer !important;" %>
			    </div>
				<% end %>
			</div>
		</div>
		<div class="text-center">
			<%= link_to "Already have an account?", sign_in_path, class: 'additional-link-text font-fix' %>
		</div>
	</div>
</div>
